<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.com.cnfic.contractmanage.product.mapper.GroupDetailMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="groupDetailResultMap" type="cn.com.cnfic.contractmanage.product.entity.GroupDetail">
        <id column="id" property="id"/>
        <result column="create_time" property="createTime"/>
        <result column="create_user" property="createUser"/>
        <result column="update_time" property="updateTime"/>
        <result column="update_user" property="updateUser"/>
        <result column="is_deleted" property="isDeleted"/>
        <result column="prod_id" property="prodId"/>
        <result column="type" property="type"/>
        <result column="item_id" property="itemId"/>
        <result column="price" property="price"/>
    </resultMap>


    <select id="selectGroupDetailPage" resultMap="groupDetailResultMap">
        select * from pro_group_detail where is_deleted = 0
    </select>

    <delete id="removeByItemId" parameterType="java.lang.Long">
        UPDATE pro_group_detail SET is_deleted = 1
        WHERE
        type = #{type}
        <foreach collection="ids" index="index" item="id"  open=" and item_id in (" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    <delete id="removeByGroupId" parameterType="java.lang.Long">
        UPDATE pro_group_detail SET is_deleted = 1
        WHERE
        <foreach collection="ids" index="index" item="id"  open=" prod_id in (" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
