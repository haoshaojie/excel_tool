<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.com.cnfic.contractmanage.product.mapper.ImagesMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="imagesResultMap" type="cn.com.cnfic.contractmanage.product.entity.Images">
        <id column="id" property="id"/>
        <result column="create_time" property="createTime"/>
        <result column="create_user" property="createUser"/>
        <result column="update_time" property="updateTime"/>
        <result column="update_user" property="updateUser"/>
        <result column="is_deleted" property="isDeleted"/>
        <result column="type" property="type"/>
        <result column="prod_id" property="prodId"/>
        <result column="image_url" property="imageUrl"/>
        <result column="file_name" property="fileName"/>
        <result column="file_size" property="fileSize"/>
    </resultMap>


    <select id="selectImagesPage" resultMap="imagesResultMap">
        select * from pro_images where is_deleted = 0
    </select>

    <delete id="removeByProdId">
        DELETE FROM pro_images WHERE type = #{type}
        <foreach collection="ids" index="index" item="id"  open=" AND prod_id in (" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>
